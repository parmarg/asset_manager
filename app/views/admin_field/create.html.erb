<div class="modal hide" id="myCreateFieldModal" style="display: none;">
  <div class="modal-header">
    <button class="close" data-toggle="modal" href="#myCreateFieldModal">Ã—</button>
    <h3>Create Field</h3>
  </div>
  <div class="modal-body" align="center">

    <form method="post" class="well" action="create" onsubmit="return $(this).validate()">
      <input name="authenticity_token" type="hidden" value="token_value">
        <table>
          <tr>
            <td><%=  text_field("name","field_type_name",:placeholder => "Name","data-validation"=>"required" ) %> </td>
          </tr>
          <tr>
            <td>  <%= text_field("description","field_type_description",:placeholder => "Description") %> </td>
          </tr>
          <tr>
            <td> <%=  select("field_type", "field_type_id", FieldType.all.collect {|p| [ p.type_name, p.id ] }, {:prompt => 'Select Field Type'},"data-validation"=>"required") %> </td>
          </tr>
        </table>
        <div class="modal-footer">

          <%= submit_tag "Create" ,:class => 'btn btn-primary'%>
          <a data-toggle="modal" href="#myCreateFieldModal" class="btn secondary">No</a>
        </div>
    </form>
  </div>

</div>