<%= render :template => 'shared/navbar' ,:locals => {:assetsNav => true, :searchNav => false,:adminNav => false}%>
<ul class="breadcrumb">
  <li><%= link_to "Dashboard", :controller =>"assets",:action =>"index" %></li>
</ul>
<%  if @assetName != nil %>
    <div class="alert alert-success">
      Asset <%= @assetName %> Successfully <%= @assetAction %>
    </div>
<% end %>
<div class="row-fluid">
  <div class="span3">
    <div class="widget_container">
      <div class="well">
        <div class="navbar navbar-static navbar_as_heading">
          <div class="navbar-inner">
            <div class="container" style="width: auto;">
              <a class="brand">Asset Break Down Quick View</a>
            </div>
          </div>
        </div>
        <table id="quick_view" class="table">
          <tbody>
          <% AssetType.each do |assetType| %>
              <% if can_view(assetType.id.to_s) %>
                  <tr>
                    <td><a href="#"><b><%= Asset.where(:asset_type_id => assetType.id.to_s).count %></b> <i class="icon-large icon-list-alt"></i> <%= assetType.name %></a></td>
                  </tr>
              <% end %>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="span6">
    <div id="recently_added_assets" class="widget_container">
      <div class="well">
        <div class="navbar navbar-static navbar_as_heading">
          <div class="navbar-inner">
            <div class="container" style="width: auto;">
              <a class="brand">Recently Added Assets</a>
            </div>
          </div>
        </div>
        <div class="row-fluid">
          <table class="table">
            <tr>
              <th>
                Asset Type
              </th>
              <th>
                Asset Name
              </th>
              <th>
                Modified By
              </th>
              <th>
                Created At
              </th>
            </tr>
            <% Asset.sort(:created_at.desc).limit(10).each do |asset| %>
                <% if can_view(asset.asset_type_id) %>
                    <tr>
                      <td style="text-align: center;">
                        <%= link_to AssetType.find(BSON::ObjectId.from_string(asset.asset_type_id)).name,{:action => 'view',:id =>asset.id} %>
                      </td>
                      <td style="text-align: center;">
                        <%= link_to asset.name,{:action => 'view',:id =>asset.id} %>
                      </td>
                      <td style="text-align: center;">
                        <%= link_to User.find(asset.created_by).full_name,{:action => 'view',:id =>asset.id} %>
                      </td>
                      <td style="text-align: center;">
                        <%= link_to  asset.created_at,{:action => 'view',:id =>asset.id} %>
                      </td>
                    </tr>
                <% end %>
            <% end %>
          </table>
          <a href="#" class="btn btn-duadua">View More</a>
        </div><!-- comments list -->
      </div>
    </div>
    <div id="quick_comment_view" class="widget_container">
      <div class="well">
        <div class="navbar navbar-static navbar_as_heading">
          <div class="navbar-inner">
            <div class="container" style="width: auto;">
              <a class="brand">Latest Modified Assets</a>
            </div>
          </div>
        </div>
        <div class="row-fluid">
          <table class="table">
            <tr>
              <th>
                Asset Type
              </th>
              <th>
                Asset Name
              </th>
              <th>
                Modified By
              </th>
              <th>
                Modified At
              </th>
            </tr>
            <% getLatestChangeHistoryForAsset().each_pair do |asset_id,changeHistory_id| %>
                <% if can_view(Asset.find(asset_id).asset_type_id) %>
                    <tr>
                      <td style="text-align: center;">
                        <%= link_to  AssetType.find(Asset.find(asset_id).asset_type_id).name,{:action => 'view',:id =>asset_id} %>
                      </td>
                      <td style="text-align: center;">
                        <%= link_to  Asset.find(asset_id).name,{:action => 'view',:id =>asset_id} %>
                      </td>
                      <td style="text-align: center;">
                        <%= link_to  User.find(ChangeHistory.find(changeHistory_id).changed_by).full_name,{:action => 'view',:id =>asset_id} %>
                      </td>
                      <td style="text-align: center;">
                        <%= link_to ChangeHistory.find(changeHistory_id).changed_at,{:action => 'view',:id =>asset_id} %>
                      </td>
                    </tr>
                <% end %>
            <% end %>
          </table>


          <a href="#" class="btn btn-duadua">View More</a>

        </div><!-- comments list -->
      </div>
    </div>



  </div>
</div>