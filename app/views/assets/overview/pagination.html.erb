<div class="pagination" style="text-align: right;">
  <ul>
    <% if @assets.current_page != 0 %>
        <li> <%= link_to 'Prev', :controller => "assets", :action => "paginate",:asset_type_id => @asset_type_id,:page =>  @assets.current_page-1 %></li>
    <% end %>
    <% counter = 0 %>
    <% @assets.total_pages.times do  %>
        <% if @assets.current_page == counter %>
        <li class="active">
          <% else %>
            <li>
            <% end %>
         <%= link_to counter+1, :controller => "assets", :action => "paginate",:asset_type_id => @asset_type_id,:page => counter %></li>
        <% counter += 1 %>
    <% end %>
    <% if @assets.current_page+1 != @assets.total_pages %>
        <li> <%= link_to 'Next', :controller => "assets", :action => "paginate",:asset_type_id => @asset_type_id,:page =>  @assets.current_page+1 %></li>
    <% end %>
  </ul>
</div>