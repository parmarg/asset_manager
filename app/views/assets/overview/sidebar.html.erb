<% content_for :sidebar do %>
    <ul class="nav nav-pills nav-stacked">
      <% @asset_types.each do |asset_type| %>
          <% if @asset_type_id != nil and BSON::ObjectId.from_string(@asset_type_id) == asset_type.id %>
              <li class="active">
          <% else %>
              <li>
          <% end %>
          <%= link_to asset_type.name ,{:controller => 'assets',:action => 'get_assets_from_asset_type',:asset_type_id => asset_type.id } %>
          </li>
      <% end %>
    </ul>
<% end %>