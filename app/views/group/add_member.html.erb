<div class="modal hide" id="myAddMember" style="display: none;">
  <div class="modal-header">
    <button class="close" data-toggle="modal" href="#myAddMember">Ã—</button>
    <h3 style="text-align: center;">Add Members</h3>
  </div>
  <div class="modal-body" align="center">
    <form method="post" class="well" action="/group/add_member" onsubmit="return $(this).validate()">
      <input name="authenticity_token" type="hidden" value="token_value">
      <table>
        <tr>
          <td><%=  select('users','users', findUsersNotInGroup(group.id).collect {|p| [ p.full_name, p.id ] },{},{:multiple => true,"data-validation" => "required"}) %></td>
        </tr>
      </table>
      <div class="modal-footer">
        <%= submit_tag "Add" ,:class => 'btn btn-primary'%>
        <a data-toggle="modal" href="#myAddMember" class="btn secondary">No</a>
      </div>
      <%= hidden_field('group', 'group_id',:value=> group.id) %>
    </form>
  </div>
</div>
<a class="btn" data-toggle="modal" href="#myAddMember" >Add Members</a>