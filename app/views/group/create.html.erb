<div class="modal hide" id="myCreateGroup" style="display: none;">
  <div class="modal-header">
    <button class="close" data-toggle="modal" href="#myCreateGroup">Ã—</button>
    <h3 style="text-align: center;">Create Group</h3>
  </div>
  <div class="modal-body" align="center">
    <form method="post" class="well" action="/group/create" onsubmit="return $(this).validate()">
      <input name="authenticity_token" type="hidden" value="token_value">
      <table>
        <tr>
          <td><%=  text_field('name','name',:placeholder => "Name","data-validation" => "required") %></td>
        </tr>
        <tr>
          <td><%=  text_field('description','description',:placeholder => "Description") %></td>
        </tr>
      </table>
      <div class="modal-footer">
        <%= submit_tag "Create" ,:class => 'btn btn-primary'%>
        <a data-toggle="modal" href="#myCreateGroup" class="btn secondary">No</a>
      </div>
    </form>
  </div>
</div>
