<div class="modal hide" id="mySendTestMailServer" style="display: none;">
  <div class="modal-header">
    <button class="close" data-toggle="modal" href="#mySendTestMailServer">Ã—</button>
    <h3 style="text-align: center;">Send Test Email</h3>
  </div>
  <div class="modal-body" align="center">
    <form method="post" class="well" action="/mail_settings/send_test_email" onsubmit="return $(this).validate()">
      <input name="authenticity_token" type="hidden" value="token_value">
      <table>
        <tr>
          <td><%=  text_field('test_email','test_email',:placeholder => "Test Email","data-validation" => "required validate_email") %></td>
        </tr>
      </table>
      <div class="modal-footer">
        <%= submit_tag "Send Test Email" ,:class => 'btn btn-primary'%>
        <a data-toggle="modal" href="#mySendTestMailServer" class="btn secondary">No</a>
      </div>
    </form>
  </div>
</div>
