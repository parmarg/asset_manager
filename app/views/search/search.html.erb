<%= render :template => 'shared/navbar' ,:locals => {:assetsNav => false, :searchNav => true,:adminNav => false}%>

<%= render :template => 'search/sidebar'  %>

<table class="table table-hover table-bordered">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
  <% @assets.each do |asset| %>
      <tr style="background-color: white;">
        <td style="text-align: center;">
          <%= asset.name %>
        </td>
        <td style="text-align: center;">
          <%= asset.description %>
        </td>
        <td style="text-align: center;">
          <%= link_to 'Edit',{ :controller => 'assets', :action => 'edit', :id => asset.id},:class => 'btn' %>
          <%= link_to 'View',{ :controller => 'assets', :action => 'view', :id => asset.id},:class => 'btn' %>
          <%= link_to 'Delete',{ :controller => 'assets', :action => 'delete', :asset_id => asset.id},:class => 'btn' %>
        </td>
      </tr>
  <% end %>
</table>
