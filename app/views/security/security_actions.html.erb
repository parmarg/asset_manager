<div class="modal hide" id="myAddUserSecurityScheme<%= security_type%>" style="display: none;">
  <div class="modal-header">
    <button class="close" data-toggle="modal" href="#myAddUserSecurityScheme<%= security_type%>">×</button>
    <h3 style="text-align: center;">Update Users</h3>
  </div>
  <div class="modal-body" align="center">
    <form method="post" class="well" action="/security/add_remove_users" onsubmit="return $(this).validate()">
      <input name="authenticity_token" type="hidden" value="token_value">
      <table>
        <tr>
          <td><%=  select('users','users',User.all.collect {|p| [ p.full_name, p.id ] },{:prompt => 'None',:selected => restrictions[:users][0]},{:multiple => true}) %></td>
        </tr>
      </table>
      <div class="modal-footer">
        <%= submit_tag "Create" ,:class => 'btn btn-primary'%>
        <a data-toggle="modal" href="#myAddUserSecurityScheme<%= security_type%>" class="btn secondary">No</a>
      </div>
      <%= hidden_field('security_type','security_type',:value=> security_type) %>
      <%= hidden_field('security_id','security_id',:value=> security_id) %>
    </form>
  </div>
</div>
<a class="btn" data-toggle="modal" href="#myAddUserSecurityScheme<%= security_type%>" >Update Users</a>
