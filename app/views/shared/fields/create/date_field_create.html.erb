<div class="control-group">
  <label class="control-label" style="color: #ffffff;"><%= field_name %></label>
  <div class="controls">
    <% if required %>
        <%= text_field(field_name,field_name,"data-validation" => "required")     %>
    <% else %>
        <%= text_field(field_name,field_name)     %>
    <% end %>
    <%= hidden_field(field_name, field_name+'_type',:value=> 'date') %>

  </div>
</div>
<script type="text/javascript">
    $('#<%= field_name -%>_<%= field_name -%>').datepicker({
        format: 'yyyy-mm-dd'
    });
</script>