<div class="control-group">
  <label class="control-label" style="color: #ffffff;"><%= field_name %></label>
  <div class="controls">
    <% if required %>
        <td><%=  password_field(field_name,field_name,"data-validation" => "required",:class => "span10") %></td>
    <% else %>
        <td><%=  password_field(field_name,field_name,:class => "span10") %></td>
    <% end %>
    <%= hidden_field(field_name, field_name+'_type',:value=> 'password') %>
  </div>
</div>